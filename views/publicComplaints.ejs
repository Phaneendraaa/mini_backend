<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complaints Feed</title>
    <style>
        /* General Styles */
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
        }

        .container {
            display: flex;
            max-width: 1200px;
            margin: 20px auto;
            gap: 20px;
        }

        /* Sidebar Styles */
        .sidebar {
            flex: 1;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .sidebar h3 {
            margin-bottom: 15px;
            font-size: 1.2rem;
            color: #4CAF50;
        }

        .filter-section label {
            display: block;
            margin: 10px 0 5px;
            font-size: 0.9rem;
        }

        .filter-section select {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            font-size: 0.9rem;
        }

        /* Complaints Feed Styles */
        .feed {
            flex: 3;
        }

        .create-complaint {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 15px;
            margin-bottom: 20px;
            background-color: #4CAF50;
            color: white;
            font-size: 1.2rem;
            border-radius: 10px;
            text-align: center;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .create-complaint:hover {
            background-color: #45a049;
        }

        .post {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 15px;
            margin-bottom: 20px;
        }

        .post-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 10px;
        }

        .username {
            font-size: 1.1rem;
            font-weight: bold;
            color: #333;
        }

        .timestamp {
            font-size: 0.9rem;
            color: #777;
        }

        .post-description {
            font-size: 1rem;
            color: #555;
            margin-bottom: 10px;
        }

        .post-image {
            width: 100%; /* Image will adapt to the width of the container */
            max-height: 300px; /* Restrict the height for a consistent post size */
            object-fit: contain; /* Ensures the whole image is visible without cropping */
            border-radius: 10px; /* Rounded corners for aesthetics */
            background-color: #f4f4f4; /* Fallback background color for transparent images */
        }
        img{
            margin-top: 10px;
        }
        #openMapButton a{
            padding:5px;
            color: black;
            text-decoration: none;
            color:white;
            font-weight: bolder;
            
        }
        #openMapButton{
            background-color: black;
            color:white;
            border:2px solid black;
            border-radius: 10px;
            height:40px;
            font-family: Arial, Helvetica, sans-serif;
            transition: 0.3s;
        }
        #openMapButton:hover{
            background-color: red;
            border:1px solid red;

        }
    </style>
</head>
<body>

    <div class="container">
        <!-- Sidebar -->
        
       
        <div class="feed">
            <div class="create-complaint" onclick="window.location.href='/createComplaint'">
                + Create a Complaint
            </div>
            <% allComplaints.forEach(function(eachComplaint) { %>
                <div id="posts-container">
                    
                    <div class="post" data-date="today" data-city="mumbai">
                        <div class="post-header">
                            <div class="username">@<%= eachComplaint.user.username %></div>
                            <div class="timestamp" id="filter-date"><%= eachComplaint.date %></div>
                        </div>
                        <div class="post-description">
                            <p><%= eachComplaint.description %></p>

                            <p><Address>&#127968;-> <%= eachComplaint.address %></Address></p>
                            <p id="filter-city"><%= eachComplaint.city %></p>

                        </div>
                        <p>Status : <%= eachComplaint.status %></p>
                        <button id="openMapButton">
                            <a href="https://www.google.com/maps/search/?api=1&query=<%= eachComplaint.latitude %>%2C<%= eachComplaint.longitude %>" target="_blank">Get Directions to Location</a>
                            
                        </button>

  
                        <img src="/images/uploads/<%= eachComplaint.image %>" alt="Complaint Image" class="post-image">
                    </div>
    
                </div>
            <% }); %>
            
        </div>
        <div class="sidebar">
            <h3>Filter Complaints</h3>
            <div class="filter-section">
                <form action="./filter-posts" method="post">
                    <label for="filter-type">By Type of complaint:</label>
                    <select id="filter-type" name="filterType">
                        <option value="all" selected>All</option>
                        <option value="roads">Roads</option>
                        <option value="govt_infra">Infra</option>
                        <option value="garbage">Garbage</option>
                        <option value="other">Other</option>
                    </select>
                    
                    <label for="filter-city">By City:</label>
                    <select id="filter-city" name="filterCity">
                        <option value="all" selected>All Cities</option>
                        <option value="hyderabad">Hyderabad</option>
                        <option value="delhi">Delhi</option>
                        <option value="bangalore">Bangalore</option>
                    </select>
                    
                    <label for="filter-status">By Status:</label>
                    <select id="filter-status" name="filterStatus">
                        <option value="all" selected>All</option>
                        <option value="pending">Pending</option>
                        <option value="resolved">Resolved</option>
                    </select>
                    
                    <input type="submit" value="Apply Filters">
                </form>
            </div>
            
        </div>

    </div>
   
    
</body>
</html>
