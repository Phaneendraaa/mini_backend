<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complaint Form</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #e1f7d5;
            margin: 0;
            padding: 20px;
        }

        .form-container {
            background-color: #ffffff;
            border-radius: 5px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 20px;
            max-width: 500px;
            margin: auto;
            border: 2px solid #4CAF50;
            margin-bottom: 20px;
        }

        h2 {
            text-align: center;
            color: #4CAF50;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #333;
        }

        select, textarea, input[type="file"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #4CAF50;
            border-radius: 4px;
            box-sizing: border-box;
        }

        button {
            background-color: #4CAF50;
            color: white;
            padding: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
            font-size: 16px;
        }

        button:hover {
            background-color: #45a049;
        }

        #locationDisplay {
            margin-top: 10px;
            font-weight: bold;
            color: green;
        }

        /* Image preview style */
        #imagePreview {
            margin-top: 10px;
            max-width: 100%;
            max-height: 300px;
            border: 1px solid #4CAF50;
            border-radius: 5px;
            object-fit: cover;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <a href="/home" style="
    position: absolute;
    top: 10px;
    left: 10px;
    text-decoration: none;
    color: #ffffff;
    background-color: #4CAF50;
    padding: 10px 20px;
    border-radius: 5px;
    font-size: 1rem;
    font-weight: bold;
    transition: background-color 0.3s ease;
"
onmouseover="this.style.backgroundColor='#45a049'; this.style.color='#e8e8e8';"
onmouseout="this.style.backgroundColor='#4CAF50'; this.style.color='#ffffff';"
>
    Back To Home
</a>

    <div class="form-container">
        <h2>Submit Your Complaint</h2>
        <form action="/ComplaintUpload" method="post" enctype="multipart/form-data">
            <div>
                <label for="complaintType">Select Complaint Type:</label>
                <select id="complaintType" name="complaintType" required>
                    <option value="garbage">Garbage</option>
                    <option value="roads">Roads</option>
                    <option value="govt_infra">Govt Infra</option>
                    <option value="other">Other</option>
                </select>
            </div>
            <div>
                <label for="address">Address:</label>
                <textarea id="address" name="address" placeholder="Enter full address of the issue" required></textarea>
            </div>
            <div>
                <label for="city">Select City:</label>
                <select id="city" name="city" required>
                    <option value="Delhi">Delhi</option>
                    <option value="Bangalore">Bangalore</option>
                    <option value="Hyderabad" selected>Hyderabad</option>
                </select>
            </div>
            <div>
                <label for="description">Description:</label>
                <textarea id="description" name="description" rows="4" placeholder="Enter your complaint description here..." required></textarea>
            </div>
            <div>
                <label for="image">Upload Image:</label>
                <input type="file" id="image" name="image" accept="image/*" required onchange="previewImage()">
            </div>
            <!-- Image preview -->
            <div id="imagePreviewContainer">
                <img id="imagePreview" src="" alt="Image Preview" style="display:none;">
            </div>
            <input type="hidden" id="latitude" name="latitude" required>
            <input type="hidden" id="longitude" name="longitude" required>
            <p>Note: Upload From the Exact location of Complaint.</p>
            <button type="button" onclick="fetchLocation()">Get Live Location</button>
            <div id="locationDisplay"></div>
            <button type="submit" style="margin-top: 10px;">Submit Complaint</button>
        </form>
    </div>

    <script>
        // Preview uploaded image
        function previewImage() {
            const file = document.getElementById('image').files[0];
            const reader = new FileReader();

            reader.onloadend = function () {
                const imagePreview = document.getElementById('imagePreview');
                imagePreview.src = reader.result;
                imagePreview.style.display = 'block';
            };

            if (file) {
                reader.readAsDataURL(file);
            }
        }

        // Fetch geolocation
        function fetchLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(
                    (position) => {
                        // Successfully fetched location
                        const latitude = position.coords.latitude;
                        const longitude = position.coords.longitude;

                        // Fill hidden input fields
                        document.getElementById("latitude").value = latitude;
                        document.getElementById("longitude").value = longitude;

                        // Show location to the user
                        document.getElementById("locationDisplay").textContent = 
                            `Location fetched: Latitude: ${latitude}, Longitude: ${longitude}`;
                    },
                    (error) => {
                        // Handle errors
                        switch (error.code) {
                            case error.PERMISSION_DENIED:
                                alert("Permission denied. Please allow location access.");
                                break;
                            case error.POSITION_UNAVAILABLE:
                                alert("Position unavailable. Please try again later.");
                                break;
                            case error.TIMEOUT:
                                alert("Request timed out. Please try again.");
                                break;
                            default:
                                alert("An unknown error occurred.");
                        }
                    },
                    {
                        enableHighAccuracy: true, // Use GPS for accuracy
                        timeout: 10000,          // Timeout after 10 seconds
                        maximumAge: 0            // No cached locations
                    }
                );
            } else {
                alert("Geolocation is not supported by this browser.");
            }
        }
    </script>
</body>
</html>
