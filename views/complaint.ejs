<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complaint Form</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #e1f7d5; /* Light green background */
            margin: 0;
            padding: 20px;
        }

        .form-container {
            background-color: #ffffff; /* White background */
            border-radius: 5px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 20px;
            max-width: 500px;
            margin: auto;
            border: 2px solid #4CAF50; /* Green border */
        }

        h2 {
            text-align: center;
            color: #4CAF50; /* Green color */
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #333;
        }

        select, textarea, input[type="file"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #4CAF50;
            border-radius: 4px;
            box-sizing: border-box;
        }

        button {
            background-color: #4CAF50;
            color: white;
            padding: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
            font-size: 16px;
        }

        button:hover {
            background-color: #45a049;
        }

        .image-preview {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px;
        }

        .preview-img {
            width: 300px; /* Set the width for a more rectangular look */
            height: 150px; /* Set the height smaller than the width to make it rectangular */
            object-fit: cover; /* Ensures the image fits and is cropped to fill the area */
            border-radius: 8px;
            border: 2px solid #4CAF50; /* Optional, can keep the border for styling */
        }
        input[type="hidden"] {
            display: none;
          }
      
          /* Style for the note below the fetched location */
          .note {
            font-size: 0.9em;
            color: #555;
            margin-top: 10px;
          }
      
          /* Display fetched location */
          #locationDisplay {
            margin-top: 10px;
            font-weight: bold;
            color: green;
          }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Submit Your Complaint</h2>
        <form action="/ComplaintUpload" method="post" enctype="multipart/form-data">
            <div>
                <label for="complaintType">Select Complaint Type:</label>
                <select id="complaintType" name="complaintType">
                    <option value="garbage">Garbage</option>
                    <option value="roads">Roads</option>
                    <option value="govt_infra">Govt Infra</option>
                    <option value="other">Other</option>
                </select>
            </div>
            <div>
                <label for="address">Address:</label>
                <textarea id="address" name="address" placeholder="Enter full address of the issue"></textarea>
            </div>
            <div>
                <label for="city">Select City:</label>
                <select id="city" name="city">
                    <option value="mumbai">Mumbai</option>
                    <option value="delhi">Delhi</option>
                    <option value="bangalore">Bangalore</option>
                    <option value="chennai">Chennai</option>
                    <option value="Hyderabad" selected>Hyderabad</option>
                </select>
            </div>
            <div>
                <label for="description">Description:</label>
                <textarea id="description" name="description" rows="4" placeholder="Enter your complaint description here..." required></textarea>
            </div>
            <div>
                <label for="image">Upload Image:</label>
                <input type="file" id="image" name="image" accept="image/*" required>
            </div>
            <input type="hidden" id="latitude" name="latitude" required>
    <input type="hidden" id="longitude" name="longitude" required>

    <button type="button" onclick="getLocation()">Get Location</button>
    <br><br>

    <div id="locationDisplay"></div> 

    <div class="note">
      Note : The complaint area location has to be your current location when location is fetched.
    </div>
            <div class="image-preview" id="imagePreview"></div>
            <button type="submit" style="margin-top: 4px;">Submit Complaint</button>
        </form>
    </div>

    <script>
        document.getElementById("image").addEventListener("change", function(event) {
            const previewContainer = document.getElementById("imagePreview");
            previewContainer.innerHTML = ""; // Clear any previous previews

            const file = event.target.files[0];

            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const img = document.createElement("img");
                    img.src = e.target.result;
                    img.classList.add("preview-img");
                    previewContainer.appendChild(img);
                };
                reader.readAsDataURL(file);
            }
        });
        function getLocation() {
            if (navigator.geolocation) {
              navigator.geolocation.getCurrentPosition(function(position) {
                // Get the latitude and longitude
                var latitude = position.coords.latitude;
                var longitude = position.coords.longitude;
      
                // Fill the hidden input fields with the latitude and longitude values
                document.getElementById("latitude").value = latitude;
                document.getElementById("longitude").value = longitude;
      
                // Display the location fetched on the page
                var locationDisplay = document.getElementById("locationDisplay");
                locationDisplay.textContent = "Location fetched: Latitude " + latitude + ", Longitude " + longitude;
      
                // Optional: Alert the user that the location is being saved
                alert("Your location has been saved.");
              }, function(error) {
                // Error handling if location access is denied
                alert("Unable to retrieve your location. Please allow location access.");
              });
            } else {
              alert("Geolocation is not supported by this browser.");
            }
          }
    </script>
</body>
</html>
