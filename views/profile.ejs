<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <style>
        /* General Styles */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 900px;
            margin: 30px auto;
            padding: 20px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        h1 {
            font-size: 2.5rem;
            color: #262626;
            margin-bottom: 20px;
        }

        .profile-info {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            border-bottom: 1px solid #e6e6e6;
            background-color: #ffffff;
        }

        .profile-info .profile-photo {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 4px solid #e6e6e6;
            background-image: url('https://via.placeholder.com/120'); /* Default Profile Image */
            background-size: cover;
            background-position: center;
            margin-right: 20px;
        }

        .profile-info .details {
            font-size: 1.2rem;
            color: #333;
        }

        .profile-info .details h3 {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .profile-info .details p {
            margin: 5px 0;
            color: #999;
        }

        .complaints-section {
            margin-top: 30px;
        }

        .complaint-card {
            background-color: #ffffff;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .complaint-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        }

        .complaint-card .complaint-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 1.1rem;
            margin-bottom: 10px;
        }

        .complaint-card .complaint-type {
            font-weight: bold;
            color: #FF6F61;
        }

        .complaint-card .complaint-status {
            color: #4CAF50;
        }

        .complaint-card .complaint-description {
            font-size: 1rem;
            color: #555;
            margin-bottom: 10px;
        }

        .complaint-card .complaint-address,
        .complaint-card .complaint-city {
            font-size: 0.95rem;
            color: #777;
        }

        .complaint-card .complaint-address::before {
            content: "üè† ";
            font-size: 1.2rem;
        }

        .complaint-card .complaint-city::before {
            content: "üåç ";
            font-size: 1.2rem;
        }

        .complaint-card .complaint-type::before {
            content: "üìù ";
            font-size: 1.5rem;
        }

        .complaint-card .image-preview {
            width: 80%;
            height: auto;
            margin-top: 10px;
            border-radius: 5px;
            object-fit: cover;
        }

        .btn {
            background-color: #4CAF50;
            color: white;
            padding: 12px 20px;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            text-align: center;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }

        .btn:hover {
            background-color: #45a049;
        }
        .header button{
            background-color: #4CAF50;
            color: white;
            padding: 12px 20px;
        }
        .header a{
            color: white;
            text-decoration: none;
            cursor: pointer;
            border: none;
        }
    </style>
</head>
<body>
    <a href="/home" style="
    position: absolute;
    top: 10px;
    left: 10px;
    text-decoration: none;
    color: #ffffff;
    background-color: #4CAF50;
    padding: 10px 20px;
    border-radius: 5px;
    font-size: 1rem;
    font-weight: bold;
    transition: background-color 0.3s ease;
"
onmouseover="this.style.backgroundColor='#45a049'; this.style.color='#e8e8e8';"
onmouseout="this.style.backgroundColor='#4CAF50'; this.style.color='#ffffff';"
>
    Back To Home
</a>
<div class="container">
    <div class="header">
        <h1>User Profile</h1>
        <button><a  href="/editp">Edit Profile</a></button>
    </div>

    <!-- User Profile Info Section -->
    <div class="profile-info">
        <div class="profile-photo">
            <img src="" alt="">
        </div> <!-- Default Profile Image -->
        <div class="details">
            <h3>Username: <span id="username"><%= userDetails.username %></span></h3>
            <p>Email: <span id="email"><%= userDetails.email %></span></p>
        </div>
    </div>

    <!-- User Complaints Section -->
    <div class="complaints-section">
        <h2>My Complaints</h2>
        <% userDetails.complaints.forEach(function(eachComplaint){ %>
                
        <div class="complaint-card">
            <div class="complaint-header">
                <div class="complaint-type">Complaint Type : <%= eachComplaint.complaintType %></div>
                <div class="complaint-status"><%= eachComplaint.status %></div>
            </div>
            <p class="complaint-description"><%= eachComplaint.description %></p>
            <p class="complaint-address">Address: <%= eachComplaint.address %></p>
            <p class="complaint-city">City: <%= eachComplaint.city %></p>
            <img src="/images/uploads/<%= eachComplaint.image %>" alt="Complaint Image" class="image-preview">
        </div>

        <% }); %>
        
    </div>
</div>

<script>
   
</script>

</body>
</html>
