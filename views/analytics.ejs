<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Analytics - Hyderabad Municipal Corporation</title>
    <style>
        /* General Styles */
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
        }

        /* Navigation Bar Styles */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #343a40;
            color: white;
            padding: 10px 20px;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .navbar h1 {
            margin: 0;
            font-size: 1.5rem;
        }

        .navbar a {
            color: white;
            text-decoration: none;
            margin-left: 20px;
            font-size: 1rem;
            transition: color 0.3s;
        }

        .navbar a:hover {
            color: #7b86fd;
        }

        /* Page Layout Styles */
        .container {
            display: flex;
            justify-content: space-between;
            margin: 20px;
        }

        #analytics-container {
            flex: 3;
            margin-right: 20px;
        }

        .analytics-box {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin-bottom: 20px;
            text-align: center;
        }

        .analytics-box h2 {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .count {
            font-size: 2rem;
            font-weight: bold;
            color: #4CAF50;
        }

        .post {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 15px;
            margin-bottom: 20px;
        }

        .post-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 10px;
        }

        .username {
            font-size: 1.1rem;
            font-weight: bold;
            color: #333;
        }

        .timestamp {
            font-size: 0.9rem;
            color: #777;
        }

        .post-description {
            font-size: 1rem;
            color: #555;
            margin-bottom: 10px;
        }

        .post-image {
            width: 100%;
            max-height: 300px;
            object-fit: contain;
            border-radius: 10px;
            background-color: #f4f4f4;
        }

        .buttons {
            display: flex;
            gap: 10px;
            margin-top: 10px;
        }

        .add-queue, #openMapButton {
            background-color: yellow;
            color: black;
            border: none;
            border-radius: 10px;
            padding: 10px 15px;
            cursor: pointer;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .add-queue:hover, #openMapButton:hover {
            background-color: red;
        }

        /* Back to Home Button */
        .back-to-home {
            background-color: #007bff;
            margin: 5px;
            width:150px;
            color: white;
            padding: 10px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 10px;
            text-decoration: none;
            text-align: center;
            transition: background-color 0.3s ease;
        }

        .back-to-home:hover {
            background-color: #0056b3;
        }
        .no-complaints-message {
            padding: 20px;
            background-color: #f8d7da;
            color: #721c24;
            border-radius: 8px;
            border: 1px solid #f5c6cb;
            font-family: 'Arial', sans-serif;
            text-align: center;
            margin-top: 20px;
            width:500px;
            margin-left: 20px;
        }

        .no-complaints-message h2 {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .no-complaints-message p {
            font-size: 1rem;
        }

        .no-complaints-message img {
            max-width: 100%;
            height: auto;
            margin-top: 20px;
            border-radius: 10px;
        }
        
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <div class="navbar">
        <h1>Citizen Complaint Box</h1>
        <div>
            <a href="/queue">Queue</a>
            <a href="/analytics">Analytics</a>
            <a href="/admin-logout">Logout</a>
        </div>
    </div>

    <!-- Back to Home Button -->
    <a href="/adminhome" class="back-to-home">Back to Home</a>

    <div class="container">
        <!-- Analytics Section -->
        <div id="analytics-container">
            <!-- Analytics Box for Resolved and Pending Complaints -->
            <div class="analytics-box">
                <h2>Complaints Analytics</h2>
                <div>
                    <p>Complaints Resolved: <span class="count"><%= resolvedComplaintsCount %></span></p>
                    <p></p>Complaints Pending: <span class="count"><%= pendingComplaintsCount %></span></p>
                </div>
            </div>
            <h2>Resolved complaints</h2>
            <% if(empty == 0) { %>
                <div class="no-complaints-message">
                    <h2>You are Lagging behind</h2>
                    <p>There are currently no Resolved complaints.!</p>
                </div>
            <% } %>
        
            <% resolvedComplaints.forEach((eachComplaint) => { %>
                <div class="post">
                    <div class="post-header">
                        <div class="username">üë§ <%= eachComplaint.user.username %></div>
                        <div class="timestamp">‚è∞ <%= eachComplaint.date %></div>
                    </div>
                    <div class="post-description">
                        <p>üìú <%= eachComplaint.description %></p>
                        <p>üìç <%= eachComplaint.address %></p>
                        <p>City: <%= eachComplaint.city %></p>
                        <p>‚úîÔ∏è Status: <%= eachComplaint.status %></p>
                    </div>
                    <img src="/images/uploads/<%= eachComplaint.image %>" alt="Complaint Image" class="post-image">
                </div>
            </div>
            <% }) %>
            <!-- Example Post Section -->
            
    </div>

    <script>
        // Function for opening Google Maps to complaint location
        function openMap(latitude, longitude) {
            if (!latitude || !longitude) {
                alert("Location coordinates are not available for this complaint.");
                return;
            }

            const mapUrl = `https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(latitude)},${encodeURIComponent(longitude)}`;
            window.open(mapUrl, '_blank');
        }
    </script>
</body>
</html>
